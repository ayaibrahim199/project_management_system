{
  "name": "spm-frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "npx vite",
    "bootstrap": "npm install --legacy-peer-deps",
    "build": "npx vite build && cp -R dist ../src/main/resources/static/frontend",
    "build:prod": "npx vite build --mode production --base /frontend/ && cp -R dist ../src/main/resources/static/frontend",
    "preview": "npx vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "postcss": "^8.4.20",
    "autoprefixer": "^10.4.14",
    "tailwindcss": "^3.4.7",
    "vite": "^5.0.0"
  }
}
